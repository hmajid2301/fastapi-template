[tool.poetry]
name = "app"
version = "0.1.0"
description = "[[short_description]]"
authors = ["Haseeb Majid <hello@haseebmajid.dev>"]

[tool.poetry.dependencies]
python = ">=3.9,<4.0"
structlog = "^21.2.0"
beanie = "^1.8.5"
uvicorn = { extras = ["standard"], version = "^0.16.0" }
httpx = "^0.21.1"
pydantic = { extras = ["dotenv"], version = "^1.8.2" }
dnspython = "^2.1.0"
fastapi-health = "^0.4.0"

[tool.poetry.dev-dependencies]
black = "^21.11b1"
isort = "^5.10.1"
flake8 = "^4.0.1"
ipython = "^7.29.0"
pre-commit = "^2.15.0"
asgi-lifespan = "^1.0.1"
pytest = "^6.2.5"
pytest-mock = "^3.6.1"
pytest-asyncio = "^0.16.0"
factory-boy = "^3.2.1"
aiohttp = "^3.8.1"
pytest-cov = "^3.0.0"
pactman = "^2.30.0"
copier == "^5.1.0"

[tool.isort]
profile = "black"
multi_line_output = 3
src_paths = ["app", "tests"]

[tool.black]
line-length = 120

[tool.mypy]

[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"
