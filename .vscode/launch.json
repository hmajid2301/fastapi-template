{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run: Fast API",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--reload", "--port", "8080"],
      "justMyCode": false
    },
    {
      "name": "Tests: Unit",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf", "tests/unit"],
      "justMyCode": false
    },
    {
      "name": "Tests: Integration",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf", "tests/integration"],
      "justMyCode": false,
      "env": {
        "PYTHONASYNCIODEBUG": "1"
      }
    },
    {
      "name": "Test: Current File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf", "${file}"],
      "justMyCode": false
    }
  ]
}
